<Window x:Class="ColorPickerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Color Picker" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Label x:Name="lblColorInfo" Content="Press 'Shift + C' to capture color" Margin="10"/>
        </StackPanel>
        <StackPanel Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label x:Name="lblColorInfo2"  Margin="10" Width="100" Height="50"/>
        </StackPanel>
    </Grid>
</Window>
